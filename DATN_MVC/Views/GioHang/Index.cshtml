@model IEnumerable<ProductViewModel> <!-- Sử dụng ViewModel để chứa thông tin sản phẩm trong giỏ hàng -->

@{
    ViewBag.Title = "Giỏ hàng";
}

<div class="container mt-4">
    <h2>Giỏ hàng của bạn</h2>
    
    @if (Model == null || !Model.Any())
    {
        <!-- Hiển thị khi giỏ hàng trống -->
        <div class="alert alert-info mt-3">
            <h4>Chưa có sản phẩm nào trong giỏ hàng.</h4>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-2">Mua sắm ngay</a>
        </div>
    }
    else
    {
        <!-- Hiển thị khi có sản phẩm trong giỏ hàng -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Giỏ hàng</li>
            </ol>
        </nav>

        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="selectAllCheckbox">
            <label class="form-check-label" for="selectAllCheckbox">Chọn tất cả</label>
        </div>

        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <input type="checkbox" class="form-check-input select-item-checkbox" data-id="@item.Id">
                        <span class="ms-2 fw-bold">@item.Name</span> <!-- Tên sản phẩm -->
                        <div class="mt-1">
                            <label for="colorSelect_@item.Id">Chọn màu:</label>
                            <select id="colorSelect_@item.Id" class="form-select form-select-sm d-inline-block" style="width: auto;">
                                @foreach (var color in item.Colors) <!-- Danh sách màu sắc từ ViewModel -->
                                {
                                    <option value="@color">@color</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="text-end">
                        <span class="text-danger fw-bold">@item.Price.ToString("C")</span> <!-- Hiển thị giá sản phẩm -->
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Script to handle "select all" checkbox functionality -->
<script>
    document.getElementById('selectAllCheckbox').addEventListener('change', function () {
        const checkboxes = document.querySelectorAll('.select-item-checkbox');
        checkboxes.forEach(checkbox => checkbox.checked = this.checked);
    });
</script>
