@model DATN_MVC.Models.Auth.LoginModel

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="auth-card">
                    <div class="row g-0">
                        <!-- Banner bên trái -->
                        <div class="col-lg-6 d-none d-lg-block">
                            <div class="auth-banner"
                                 style="background-image: url('/images/auth/login-banner.jpg')">
                            </div>
                        </div>

                        <!-- Form bên phải -->
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="auth-title">Đăng nhập</h1>
                                    <p class="auth-subtitle">Chào mừng bạn trở lại!</p>
                                </div>

                                @if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger">
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var error in ViewData.ModelState.Values
                                           .SelectMany(v => v.Errors)
                                           .Select(e => e.ErrorMessage)
                                           .Distinct())
                                            {
                                                <li><i class="fas fa-exclamation-circle me-2"></i>@error</li>
                                            }
                                        </ul>
                                    </div>
                                }

                                <form asp-action="Login" method="post">
                                    <div class="mb-3">
                                        <label asp-for="TenDangNhap" class="form-label">
                                            <i class="fas fa-user me-2"></i>Tên đăng nhập
                                        </label>
                                        <div class="input-icon">
                                            <i class="fas fa-user"></i>
                                            <input asp-for="TenDangNhap" class="form-control"
                                                   placeholder="Nhập tên đăng nhập của bạn" />
                                        </div>
                                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                                    </div>

                                    <div class="mb-4">
                                        <label asp-for="MatKhau" class="form-label">
                                            <i class="fas fa-lock me-2"></i>Mật khẩu
                                        </label>
                                        <div class="input-icon">
                                            <i class="fas fa-lock"></i>
                                            <input asp-for="MatKhau" class="form-control"
                                                   placeholder="Nhập mật khẩu của bạn" />
                                        </div>
                                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                                    </div>

                                    <div class="mb-4 form-check">
                                        <input asp-for="RememberMe" class="form-check-input" />
                                        <label asp-for="RememberMe" class="form-check-label">
                                            Ghi nhớ đăng nhập
                                        </label>
                                    </div>

                                    <button type="submit" class="btn-auth">
                                        <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                                    </button>
                                </form>

                                <div class="auth-footer">
                                    <p>
                                        <a asp-action="ForgotPassword" class="auth-link">Quên mật khẩu?</a>
                                    </p>
                                    <p class="mt-2">
                                        Chưa có tài khoản?
                                        <a asp-action="Register" class="auth-link">Đăng ký ngay</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}