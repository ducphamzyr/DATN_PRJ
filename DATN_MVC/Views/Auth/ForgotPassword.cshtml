@model DATN_MVC.Models.Auth.ForgotPasswordModel

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="auth-card">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="auth-title">Quên mật khẩu?</h1>
                            <p class="auth-subtitle">Nhập email để lấy lại mật khẩu</p>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <ul class="list-unstyled mb-0">
                                    @foreach (var error in ViewData.ModelState.Values
                                   .SelectMany(v => v.Errors)
                                   .Select(e => e.ErrorMessage)
                                   .Distinct())
                                    {
                                        <li><i class="fas fa-exclamation-circle me-2"></i>@error</li>
                                    }
                                </ul>
                            </div>
                        }

                        <form asp-action="ForgotPassword" method="post">
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope me-2"></i>Email
                                </label>
                                <div class="input-icon">
                                    <i class="fas fa-envelope"></i>
                                    <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn-auth mb-3">
                                <i class="fas fa-key me-2"></i>Lấy lại mật khẩu
                            </button>

                            <div class="text-center">
                                <a asp-action="Login" class="auth-link">
                                    <i class="fas fa-arrow-left me-2"></i>Quay lại đăng nhập
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}