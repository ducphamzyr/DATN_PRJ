@using DATN_MVC.Models.PhanQuyen
@model List<PhanQuyenDTO>
@{
    ViewData["Title"] = "Role Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Role Management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Home</a></li>
                    <li class="breadcrumb-item active">Roles</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Thông báo -->
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-check"></i> Success!</h5>
                @TempData["success"]
            </div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-ban"></i> Error!</h5>
                @TempData["error"]
            </div>
        }

        <!-- Bảng danh sách -->
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-list"></i> Role List
                    </h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <!-- Role count summary -->
                        <div class="info-box mb-3 bg-info">
                            <span class="info-box-icon"><i class="fas fa-users-cog"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Total Roles & Users</span>
                                <span class="info-box-number">
                                    @Model.Count Roles | @Model.Sum(x => x.SoLuongTaiKhoan) Users
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <table id="roleTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th width="50px">No.</th>
                            <th>Role Name</th>
                            <th width="150px">User Count</th>
                            <th width="150px">Created Date</th>
                            @if (Model.Any(x => x.NgayCapNhat.HasValue))
                            {
                                <th width="150px">Updated Date</th>
                            }
                            <th width="150px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var index = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@(index++)</td>
                                <td>@item.TenPhanQuyen</td>
                                <td class="text-center">
                                    <span class="badge badge-info">@item.SoLuongTaiKhoan Users</span>
                                </td>
                                <td class="text-center">@item.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                                @if (Model.Any(x => x.NgayCapNhat.HasValue))
                                {
                                    <td class="text-center">
                                        @(item.NgayCapNhat?.ToString("dd/MM/yyyy HH:mm") ?? "-")
                                    </td>
                                }
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-info btn-sm" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-warning btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (item.TenPhanQuyen != "Admin")
                                        {
                                            <button onclick="confirmDelete(@item.Id)"
                                                    class="btn btn-danger btn-sm" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<!-- Delete form -->
<form id="deleteForm" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" id="deleteId" name="id" />
</form>

@section Scripts {
    <script>
        $(function () {
            $("#roleTable").DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "language": {
                    "url": "/lib/datatables/en.json"
                },
                "buttons": ["copy", "excel", "pdf", "print"]
            }).buttons().container().appendTo('#roleTable_wrapper .col-md-6:eq(0)');
        });

        function confirmDelete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Delete',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $("#deleteId").val(id);
                    $("#deleteForm").submit();
                }
            });
        }
    </script>
}